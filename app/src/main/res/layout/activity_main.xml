<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff7f7"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/greeting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Meet: The Hamburg Werewolves."
        android:textColor="#000000"
        android:textSize="22sp"
        android:typeface="sans"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/logo"
            android:src="@drawable/hwlogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Quidditch team of your choice."
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/logo"
            android:textSize="12sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="#dadada">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="If you live in Hamburg and you're interested in an engaging, fun sport - try Quidditch in the local team, the Hamburg Werewolves."

            android:textSize="16sp"
            />

    </RelativeLayout>


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Want to check it out? Feel free to contact us!"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/web_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/web"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:text="www.quidditch-hamburg.de"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/envelope_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/envelope" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="8dp"
                android:text="patrick@quidditch-hamburg.de" />

        </LinearLayout>


</LinearLayout>